<div class="container">
  <h2> <%= @list.name %></h2>
    <% if @list.photo.attached? %>
    <p><%=  cl_image_tag(@list.photo.key, height: 250, width: 250, crop: :fill)  %><p>
    <% end  %>
      <p><% @list.movies.each do |movie| %><p>
        <% bookmark = Bookmark.find_by(list: @list, movie: movie)  %>
        <%=movie.title  %>
        <div class="container">
        <%= link_to "Delete Bookmark", bookmark_path(bookmark), method: :delete, data: {confirm: 'Are you sure?'} %>
        </div>
      <%end  %>
</div>
<div class="container">
  <%= link_to "Homescreen", lists_path %>
</div>
<div class="container">
      <%= link_to "Add new Bookmark", new_list_bookmark_path(@list) %>
</div>
